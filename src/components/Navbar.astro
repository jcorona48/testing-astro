---
    import {narbarOptions} from '../config'
---


<nav>
    <ul>
        {
            narbarOptions.map((option) => {
                return (
                    <li>
                        <a href={option.href}>{option.label}</a>
                    </li>
                )
            })
        }
    </ul>
</nav>


<style>
    nav {
        background-color: #333;
        color: #fff;
        padding: 10px;
    }

    nav ul {
        display: flex;
        justify-content: center;
        list-style: none;
        gap: 10px;
    }

    nav ul li {
        padding: 10px;
    }

    nav ul li a {
        color: #fff;
        text-decoration: none;
    }

    nav ul li a:hover {
        color: #ccc;
    }
</style>